<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UpdatePaymentActivity">

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="581dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="74dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Guide"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Payment Details"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txt_book_guideId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Guide Id"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_book_guideName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Guide Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_book_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Payer's First Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_book_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Payer's Last Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_book_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Payer's Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/txt_book_contactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Payer's Contact Number"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_book_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Payer's Address"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_book_placesToVisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name of the Places want to Visit"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_book_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Amount to be Paid"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btn_proceed_to_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update and Proceed to Pay"
            app:icon="@drawable/ic_baseline_attach_money_24" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>