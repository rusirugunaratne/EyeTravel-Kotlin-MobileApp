<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.ViewPaymentDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="357dp"
        android:layout_height="467dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Details"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Payment"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/lbl_guideId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guide Id"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lbl_guideName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guide Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lbl_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payer's First Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lbl_lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payer's Last Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lbl_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lbl_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact No"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lbl_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lbl_places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Places to Visit"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lbl_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Amount"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_pay_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_pay_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"
                app:icon="@drawable/ic_baseline_delete_forever_24" />
        </LinearLayout>

        <Button
            android:id="@+id/ptn_pay_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay"
            app:icon="@drawable/ic_baseline_attach_money_24" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>