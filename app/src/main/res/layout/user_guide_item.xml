<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ExtraText"><![CDATA[

    />




    ]]>

    <ImageView
        android:id="@+id/user_guide_imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_user_guideName"
        android:layout_width="205dp"
        android:layout_height="33dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="36dp"
        android:text="Guide Name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/user_guide_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_user_guideEmail"
        android:layout_width="214dp"
        android:layout_height="27dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="32dp"
        android:text="Guide Email"
        app:layout_constraintStart_toStartOf="@+id/user_guide_imageView"
        app:layout_constraintTop_toTopOf="@+id/txt_user_guideName" />

    <Button
        android:id="@+id/btn_user_guide_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="232dp"
        android:layout_marginTop="116dp"
        android:text="View"
        app:icon="@drawable/ic_baseline_visibility_24"
        app:layout_constraintStart_toStartOf="@+id/user_guide_imageView"
        app:layout_constraintTop_toTopOf="@+id/txt_user_guideName"
        tools:ignore="UnknownIdInLayout" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="244dp"
        android:layout_height="55dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="@+id/user_guide_imageView"
        app:layout_constraintTop_toTopOf="@+id/txt_user_guideName" />

</androidx.constraintlayout.widget.ConstraintLayout>