<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.BookGuideActivity">

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="581dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="74dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Guide"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Details"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txt_book_guideIdMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Guide Id"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_book_guideNameMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Guide Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_book_firstNameMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Payer's First Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_book_lastNameMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Payer's Last Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_book_emailMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Payer's Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/txt_book_contactNumberMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Payer's Contact Number"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_book_AddressMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Payer's Address"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_book_placesToVisitMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name of the Places want to Visit"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txt_book_amountMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Amount to be Paid"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btn_book_guideView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View"
            app:icon="@drawable/ic_baseline_visibility_24" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>